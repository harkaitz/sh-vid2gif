##:
#h: Usage: $0 [-v][-o OFILE][-s SSEC][-l SDUR] [--] IFILE
#h:
#h: Convert input video files to GIF format.
#h:
#h: -l      : Limit the duration.
#h: -s      : Seek seconds before.
#h: -f RATE : Framerate (Default 10). 
##:
vid2gif() {
    local OPTIND optopt='' ofil='' ifil='' ffmpeg_opts='' rate='10' VERBOSE="${VERBOSE}"
    ## Parse command line arguments.
    while getopts "vo:s:l:f:" optopt; do # OPTARG
        case $optopt in
            v)  local VERBOSE=y;;
            o)  ofil="${OPTARG}";;
            s)  ffmpeg_opts="${ffmpeg_opts} -ss ${OPTARG}";;
            l)  ffmpeg_opts="${ffmpeg_opts} -t  ${OPTARG}";;
            f)  rate="${OPTARG}";;
            \?) return 1;;
        esac
    done
    shift $(( $OPTIND - 1 ))
    ## Check ffmpeg is installed.
    if ! which ffmpeg >/dev/null 2>&1; then
        echo "${SCRNAME}: error: Please install 'ffmpeg'." >&2
        return 1
    fi
    ## For each input.
    for ifil in "$1"; do
        local ofil="${ofil:-${ifil}.gif}"
        if test -n "${VERBOSE}";then
           printf '%s\n'                    \
                  "${SCRNAME}: .-- ${ifil}" \
                  "${SCRNAME}: '-> ${ofil}" >&2
        fi
        ffmpeg              \
            -loglevel fatal \
            -y              \
            ${ffmpeg_opts}  \
            -i "${ifil}"    \
            -vf "fps=${rate},scale=320:-1:flags=lanczos,split[s0][s1];[s0]palettegen[p];[s1][p]paletteuse" \
            -loop 0         \
            -- "${ofil}" >> "${HOME}/.log/vid2gif.log" 2>&1 < /dev/tty
    done
    
}
## -----------------------------------------------------------------------------
SCRNAME="`basename "$0"`"
if test @"${SCRNAME}" = @"vid2gif";then
    case "${1}" in
        ''|-h|--help)
            sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|${SCRNAME}|g"
            echo ""
            sed -n 's/^ *#l: \{0,2\}//p' "$0"
            ;;
        *)
            vid2gif "$@"
            ;;
    esac
fi
