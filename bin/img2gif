##:
#h: Usage: $0 [-v][-o OFILE][-T PERIOD] [--] IFILES...
#h:
#h: Join images into a single GIF using ImageMagick(1).
##:
img2gif() {
    local OPTIND optopt ofil='' period=1
    ## Parse command line arguments.
    while getopts "vo:T:" optopt; do
        case $optopt in
            v)  local VERBOSE=y;;
            o)  ofil="${OPTARG}"   ;;
            T)  period="${OPTARG}" ;;
            \?) return 1;;
        esac
    done
    shift $(( $OPTIND - 1 ))
    ## Idempotent without arguments.
    if test ! -n "$1"; then
        return 0
    fi
    ## Check convert is installed.
    if ! which convert >/dev/null 2>&1; then
        echo "${SCRNAME}: error: Please install 'convert'." >&2
        return 1
    fi
    ## Prepare ImageMagick arguments and execute.
    if test ! -n "${ofil}"; then
        ofil="${1}.gif"
    fi
    convert -delay $(( "${period}" * 100 )) -loop 0 "$@" "${ofil}"
}
SCRNAME="`basename "$0"`"
if test @"${SCRNAME}" = @"img2gif";then
    case "${1}" in
        ''|-h|--help)
            sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|${SCRNAME}|g"
            echo ""
            sed -n 's/^ *#l: \{0,2\}//p' "$0"
            ;;
        *)
            img2gif "$@"
            ;;
    esac
fi
